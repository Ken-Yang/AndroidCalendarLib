<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/shape_triangle">
        <rotate
            android:fromDegrees="45"
            android:pivotX="87%"
            android:pivotY="-40%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <size
                    android:height="25dp"
                    android:width="25dp" />

                <solid android:color="@color/marker" />
            </shape>
        </rotate>
    </item>

</layer-list>